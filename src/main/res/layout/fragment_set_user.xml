<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SetUser">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facilityName"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spnFacility"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btnSetFacility"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:text="@string/newFacility" />

            <Button
                android:id="@+id/editFacility"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/editFacility" />

            <Button
                android:id="@+id/deleteFacility"
                android:layout_width="0dip"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:text="@string/deleteFacility" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/premiseName"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spnPremise"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btnSetPremise"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/setNewPremise"/>
            <Button
                android:id="@+id/editPremise"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/editPremise" />

            <Button
                android:id="@+id/deletePremise"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/deletePremise" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userName"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/spnUser"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/arrayProtocol"
                android:gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btnSetNewUser"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btSetNewUser" />
            <Button
                android:id="@+id/editUser"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/editUser" />

            <Button
                android:id="@+id/deleteUser"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/deleteUser" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>